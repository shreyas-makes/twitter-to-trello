{
    "manifest_version": 3,
    "name": "Twitter to Trello Exporter",
    "version": "1.0",
    "description": "Manually export Twitter bookmarks to Trello todo list",
    
    "permissions": [
      "storage",
      "activeTab"
    ],
    
    "host_permissions": [
      "https://api.trello.com/*",
      "https://twitter.com/*",
      "https://x.com/*"
    ],
    
    "content_scripts": [
      {
        "matches": [
          "https://twitter.com/*", 
          "https://x.com/*"
        ],
        "js": ["content-script.js"],
        "css": ["styles.css"]
      }
    ],
    
    "background": {
      "service_worker": "background.js"
    },
    
    "action": {
      "default_popup": "popup.html",
      "default_title": "Twitter to Trello"
    },
    
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },

    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }